<!DOCTYPE html>
<html class="blog-index">
{{> html-head }}

<body>
    {{> header }}

    <div id="main">
        <div class="container">

            <ul class="blog-list">
                {{#each collections.blog-post}}
                    {{#if title}}
                      <div class="humongous {{#unless cover-img}}no-cover{{/unless}}{{#if cover-img}}cover-img{{/if}}" {{#if cover-img}}style="background-image: url(./assets/img/{{cover-img}});"{{/if}}>
                        <img src="./assets/img/vector-scroll-top.png" alt="" class="grayscale">
                          <a href="./blog/{{ slug }}.html"><h1 class="hello">{{title}}</h1></a>
                          <span class="datetime"><time>{{posted}}</time></span>
                          <img src="./assets/img/vector-scroll-bottom.png" alt="" class="grayscale">
                      </div>
                    {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</body>
</html>
